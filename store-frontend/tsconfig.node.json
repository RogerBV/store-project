{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["node", "vitest/config"]
  },
  "include": ["vite.config.ts"],
  "exclude": [
    "node_modules/**",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
